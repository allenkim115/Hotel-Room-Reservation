    <script src="https://kit.fontawesome.com/bf35ff1032.js" crossorigin="anonymous"></script>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        .hero-section {
            margin-top: 0;
            padding: 0;
            height: 100vh;
            width: 100%;
            background: url('/images/landing.png') center/cover no-repeat;
        }

        .navbar {
            margin-bottom: 0;
            padding: 10px 0;
        }

        .border-layer {
            position: absolute;
            top: -15px;
            left: -15px;
            width: 90%;
            height: 90%;
            border: 2px solid maroon;
            padding: 10px;
            z-index: -1;
        }

        img {
            border-radius: 8px;
        }

        .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
            padding: 10px 20px;
        }

        .btn-primary:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
        }
        .service-card {
            margin:1rem;
            background-color: #f8f9fa; /* Light gray background */
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            text-align: center;
        }
        .btn-primary {
            background-color: #800000; /* Maroon background */
            border-color: #800000; /* Maroon border */
            color: white; /* White text */
            padding: 10px 20px;
            transition: background-color 0.3s ease, border-color 0.3s ease; /* Smooth transition for hover effect */
        }

        .btn-primary:hover {
            background-color: #590000; /* Darker maroon on hover */
            border-color: #590000; /* Darker maroon border on hover */
        }

        .service-card img {
            width: 40px;
            height: 40px;
        }

        .service-card h5 {
            font-size: 18px;
            color: #000;
        }

        .service-card p {
            font-size: 14px;
        }

        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .service-card.active {
            background-color: #fff3f3;
            border: 1px solid #ffcccc;
        }

        .text-muted {
            color: #6c757d;
        }
    </style>
</head>
