@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero-section text-center text-white d-flex justify-content-center align-items-center" style="background: url('/images/landing.png') center/cover; height: 70vh; width:100%;">
    <div class="d-flex flex-column align-items-center">
        <img src="~/images/logo1.png" />
        <img src="~/images/line.png" alt="Alternate Text" />
        <h3 class="mt-5">"Where comfort meets style, and every stay feels like home."</h3>
        <a href="/Home/BookNow" class="btn btn-danger mt-3" style="background-color: white; color: red; border-radius: 50px; font-weight: bold; font-size: 1.5rem; padding: 10px 20px;">Book Now!</a>
    </div>
</div>

<section class="container my-5">
    <div class="row">
        <div class="col-md-6">
            <h4>Explore</h4>
            <h2>Choose Your Stay</h2>
            <img src="~/images/room.png" alt="Room Image" class="img-fluid"/>
        </div>
        <div class="col-md-6" style="margin-top:100px;">
            <div class="row mt-5" style="border-left:2px solid black; padding:20px;">
                <div class="col-md-12 mb-3">
                    <h3 class="mt-2">Standard</h3>
                </div>
                <div class="col-md-12 mb-3">
                    <h3 class="mt-2">Deluxe</h3>
                </div>
                <div class="col-md-12 mb-3">
                    <h3 class="mt-2">Suite</h3>
                </div>
            </div>
            <div style="margin-top:60px;">
                <a href="#" class="btn btn-primary mt-2 w-auto" style="background-color: maroon; font-weight: bold; border: none;">View Room</a>
            </div>
        </div>
    </div>
</section>

<section class="text-white text-center py-5" style="background-color: maroon;">
    <img src="~/images/logo.png">
    <h2>Happy Customers</h2>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="card d-flex flex-row align-items-center">
                    <img src="~/images/quote.png" alt="Alternate Text" style="position: absolute; top: 10px; right: 10px; width: 30px; height: 30px;">
                    <img src="~/images/customer.png" class="rounded-circle" alt="Customer Image" style="width: 100px; height: 100px; object-fit: cover; margin: 10px;">
                    <div class="card-body">
                        <p class="card-text">“Great experience, luxurious stay!”</p>
                        <strong>- Jamy</strong>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card d-flex flex-row align-items-center">
                    <img src="~/images/quote.png" alt="Alternate Text" style="position: absolute; top: 10px; right: 10px; width: 30px; height: 30px;">
                    <img src="~/images/customer.png" class="rounded-circle" alt="Customer Image" style="width: 100px; height: 100px; object-fit: cover; margin: 10px;">
                    <div class="card-body">
                        <p class="card-text">“Loved the ambiance and services!”</p>
                        <strong>- Jacob</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
