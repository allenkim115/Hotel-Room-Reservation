@model WebApplication1.Models.BaseViewModel
@{
    Layout = "_Layout";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nustar Hotel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/bf35ff1032.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        .hero-section {
            margin-top: 0;
            padding: 0;
            height: 100vh;
            width: 100%;
            background: url('/images/landing.png') center/cover no-repeat;
        }

        .navbar {
            margin-bottom: 0;
            padding: 10px 0;
        }

        .border-layer {
            position: absolute;
            top: -15px;
            left: -15px;
            width: 90%;
            height: 90%;
            border: 2px solid maroon;
            padding: 10px;
            z-index: -1;
        }

        img {
            border-radius: 8px;
        }

        .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
            padding: 10px 20px;
        }

        .btn-primary:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
        }
        .service-card {
            margin:1rem;
            background-color: #f8f9fa; /* Light gray background */
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            text-align: center;
        }
        .btn-primary {
            background-color: #800000; /* Maroon background */
            border-color: #800000; /* Maroon border */
            color: white; /* White text */
            padding: 10px 20px;
            transition: background-color 0.3s ease, border-color 0.3s ease; /* Smooth transition for hover effect */
        }

        .btn-primary:hover {
            background-color: #590000; /* Darker maroon on hover */
            border-color: #590000; /* Darker maroon border on hover */
        }

        .service-card img {
            width: 40px;
            height: 40px;
        }

        .service-card h5 {
            font-size: 18px;
            color: #000;
        }

        .service-card p {
            font-size: 14px;
        }

        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .service-card.active {
            background-color: #fff3f3;
            border: 1px solid #ffcccc;
        }

        .text-muted {
            color: #6c757d;
        }
    </style>
</head>
<body>
    <!-- Hero Section -->
    <div class="hero-section d-flex justify-content-center align-items-center text-center text-white">
        <div class="d-flex flex-column align-items-center p-4">
            <img src="~/images/logo1.png" />
            <img src="~/images/line.png" alt="Alternate Text" />
            <h3 style="padding:0.5rem;">"Where comfort meets style, and every stay feels like home."</h3>
            <a href="@(User.Identity.IsAuthenticated ? "/Home/RoomTypes" : "/Account/Login")" class="btn p-3 mt-5" style="border: 2px solid white; border-radius: 20px; background-color:white; color:maroon; font-weight:bold;">Book Now</a>
        </div>
    </div>

    <section class="container my-5 p-4" style="height: 50vh;">
        <div class="row align-items-center">
            <div class="col-md-6 position-relative">
                <div class="border-layer"></div>
                <img src="~/images/suite.png" alt="Hotel" class="img-fluid rounded shadow-lg"/>
            </div>
            <div class="col-md-6 p-4">
                <h2 class="fw-bold mb-4">Why Choose Us</h2>
                <p>
                    Experience luxury and comfort at its finest. Our hotel offers world-class amenities, 
                    exceptional service, and unforgettable experiences for every guest.
                </p>
                <p>
                    From our premium rooms to our award-winning restaurants, we ensure your stay is nothing 
                    short of extraordinary.
                </p>
            </div>
        </div>
    </section>

    <section class="text-white text-center py-5 p-4" style="background-color: maroon; padding: 2rem;">
        <div class="container text-center my-5 p-4" style="color:white;">
            <h2 class="fw-bold mb-4">Our Services</h2>
            <p class="text-white mb-4">Discover our premium services designed to enhance your stay.<br>
                From spa treatments to fine dining, we've got you covered.
            </p>
            
            <div class="row mt-4">
                @foreach (var service in Model.Services)
                {
                    <div class="col-md-3">
                        <div class="service-card @(service.IsActive ? "active" : "")">
                            <div class="icon">
                                <img src="@service.IconUrl" alt="@service.Name" class="img-fluid rounded shadow-lg">
                            </div>
                            <h5 class="fw-bold mt-3">@service.Name</h5>
                            <p class="text-muted">@service.Description</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <script>
        $(document).ready(function() {
            // Add smooth scrolling to all links
            $("a").on('click', function(event) {
                if (this.hash !== "") {
                    event.preventDefault();
                    var hash = this.hash;
                    $('html, body').animate({
                        scrollTop: $(hash).offset().top
                    }, 800, function(){
                        window.location.hash = hash;
                    });
                }
            });

            // Add active class to current nav item
            var currentLocation = window.location.pathname;
            $('.navbar-nav .nav-link').each(function() {
                if ($(this).attr('href') === currentLocation) {
                    $(this).addClass('active');
                }
            });
        });
    </script>
</body>