@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background: rgb(217, 217, 217);
        background: linear-gradient(115deg, rgba(217, 217, 217, 1) 25%, rgba(255, 255, 255, 1) 44%, rgba(119, 29, 29, 1) 84%);
        font-family: "Quicksand", sans-serif;
    }

    .parent {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(1, 1fr);
        gap: 20px;
        align-items: stretch; /* Changed to stretch */
    }

    .div2 {
        display: flex;
        align-items: stretch;
    }

    .div2 img {
        width: 100%;
        height: 96%; /* Changed to 100% */
        border-radius: 15px;
        object-fit: cover;
    }

    .form-control,
    .form-select {
        border: 1px solid #800000;
        padding: 10px; /* Reduced padding */
        border-radius: 5px;
    }

    .form-label {
        font-weight: bold;
        margin-bottom: 3px; /* Reduced margin */
    }

    .btn {
        background-color: #800000;
        border-color: #800000;
        color: #ffff;
        font-weight: bold;
        padding: 12px; /* Reduced padding */
        border-radius: 5px;
    }

    .btn:hover {
        background-color: #590000;
        border-color: #590000;
    }

    .services-checkbox-group {
        display: flex;
        flex-wrap: wrap;
        gap: 8px; /* Reduced gap */
    }

    .services-checkbox-group .form-check {
        margin: 0;
    }
    .container-booknow {
        margin-top: 2rem !important; /* Reduced margin-top */
        margin-bottom: 2rem !important; /* Reduced margin-bottom */
    }
    .div1{
        padding:2rem;
    }
    .mb-4 {
        margin-bottom: 1rem !important; /* Reduced margin */
    }
    .mt-4{
        margin-top:1.5rem !important;
    }
</style>

<div class="container container-booknow p-4 shadow rounded bg-light">
    <h1 class="text-center mb-4" style="font-weight:bold;">Book Now</h1>
    <p class="text-center mb-4 text-muted">Please fill out the form below to book your stay with us.</p>
    <div class="parent">
        <div class="div1">
            <form>
                <div class="mb-4">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter your name">
                </div>
                <div class="mb-4">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter your email">
                </div>
                <div class="mb-4">
                    <label class="form-label">Dates</label>
                    <div class="row">
                        <div class="col-md-6">
                            <label for="checkin" class="form-label">Check-in Date</label>
                            <input type="date" class="form-control" id="checkin">
                        </div>
                        <div class="col-md-6">
                            <label for="checkout" class="form-label">Check-out Date</label>
                            <input type="date" class="form-control" id="checkout">
                        </div>
                    </div>
                </div>
                <div class="mb-4">
                    <label for="roomType" class="form-label">Room Type</label>
                    <select class="form-select" id="roomType">
                        <option selected disabled>Select Room Type</option>
                        <option value="standard" data-image="/images/standard.png">Standard</option>
                        <option value="deluxe" data-image="/images/room.png">Deluxe</option>
                        <option value="suite" data-image="/images/suite.png">Suite</option>
                    </select>
                </div>
                <div class="mb-4">
                    <label class="form-label">Guests</label>
                    <div class="row">
                        <div class="col-md-6">
                            <label for="adults" class="form-label">Adults</label>
                            <input type="number" class="form-control" id="adults" value="1" min="1">
                        </div>
                        <div class="col-md-6">
                            <label for="children" class="form-label">Children</label>
                            <input type="number" class="form-control" id="children" value="0" min="0">
                        </div>
                    </div>
                </div>
                <div class="mb-4">
                    <label class="form-label">Services</label>
                    <div class="services-checkbox-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="spa" id="spaService">
                            <label class="form-check-label" for="spaService">Spa</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="restaurant" id="restaurantService">
                            <label class="form-check-label" for="restaurantService">Restaurant</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="pool" id="poolService">
                            <label class="form-check-label" for="poolService">Pool</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="gym" id="gymService">
                            <label class="form-check-label" for="gymService">Gym</label>
                        </div>
                    </div>
                </div>
                <div class="mt-5">
                     <button type="submit" class="btn w-100">Submit</button>
                </div>
            </form>
        </div>
        <div class="div2" id="roomImageContainer">
            <img src="~/images/standard.png" alt="room" id="roomImage">
        </div>
    </div>

</div>

<script>
    document.getElementById('roomType').addEventListener('change', function () {
        const selectedOption = this.options[this.selectedIndex];
        const imagePath = selectedOption.getAttribute('data-image');
        const roomImage = document.getElementById('roomImage');

        if (imagePath) {
            roomImage.src = imagePath;
        } else {
            roomImage.src = "/images/standard.png"; // Default image if no data-image is provided
        }
    });

    // Initialize the image on page load
    window.addEventListener('load', function () {
        const roomTypeSelect = document.getElementById('roomType');
        roomTypeSelect.dispatchEvent(new Event('change')); // Trigger the change event
    });
</script>
