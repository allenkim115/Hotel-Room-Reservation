@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background: rgb(217, 217, 217);
            background: linear-gradient(115deg, rgba(217, 217, 217, 1) 25%, rgba(255, 255, 255, 1) 44%, rgba(119, 29, 29, 1) 84%);
            font-family: "Quicksand", sans-serif;
        }

        .container {
            background-color: #fff;
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            padding: 30px;
            margin-top: 50px;
            max-width: 600px;
        }

        h2 {
            color: #343a40;
            margin-bottom: 30px;
            text-transform: uppercase;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 5px;
            border: 1px solid #ced4da;
            padding: 12px 15px; /* Increased padding for bigger input */
            font-size: 1.1rem;  /* Increased font size for bigger text */
            height: auto;      /*Allow the height to grow naturally with the padding and the text */
        }
        .form-control:focus {
            box-shadow: 0 0 0 0.25rem rgba(128, 0, 0, 0.5) !important;
        }
        .btn-primary {
            background-color: maroon;
            border: none;
            padding: 12px 20px; /* Increased padding for bigger button */
            font-size: 1.1rem; /* Increased font size for bigger text */
            font-weight: bold;
        }

        .btn-primary:hover {
            background-color: #800000;
        }

        .btn-secondary {
            background-color: gray;
            border: none;
            padding: 12px 20px; /* Increased padding for bigger button */
            font-size: 1.1rem; /* Increased font size for bigger text */
            font-weight: bold;
        }

        .btn-secondary:hover {
            background-color: #6c757d;
        }

        .text-danger {
            color: red;
        }

        .profile-picture-container {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .profile-picture {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid maroon;
        }
    </style>
</head>
<body>

    <div class="container mx-auto mt-5">
        <h2 >Profile</h2>
        <div class="profile-picture-container">
            <img src="~/images/profile.png" alt="Profile Picture" class="profile-picture" id="profilePicture">
        </div>

        <form>
            <div class="form-group">
                <strong for="firstName" class="control-label">First Name</strong>
                <input type="text" id="firstName" class="form-control" value="Damien Nerry" />
            </div>

            <div class="form-group">
                <strong for="lastName" class="control-label">Last Name</strong>
                <input type="text" id="lastName" class="form-control" value="Caumeran" />
            </div>

            <div class="form-group">
                <strong for="userName" class="control-label">Username</strong>
                <input type="text" id="userName" class="form-control" value="damskie" />
            </div>
            <div class="form-group">
                <strong for="email" class="control-label">Email</strong>
                <input type="email" id="email" class="form-control" value="damskie@email.com" />
            </div>

            <div class="form-group">
                <strong for="password" class="control-label">New Password</strong>
                <input type="password" id="password" class="form-control" />
            </div>

            <div class="form-group">
                <strong for="confirmPassword" class="control-label">Confirm Password</strong>
                <input type="password" id="confirmPassword" class="form-control" />
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <button type="button" class="btn btn-secondary">Cancel</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
