@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "User Dashboard";
}

<!-- User Profile Section -->
<div class="profile-section">
    <div class="row align-items-center">
        <div class="col-md-3 text-center">
            <div class="user-avatar-large">
                <i class="fas fa-user"></i>
            </div>
        </div>
        <div class="col-md-9">
            <h3>Welcome back, John!</h3>
            <p class="mb-0">Member since January 2023</p>
            <div class="mt-3">
                <span class="badge bg-light text-dark me-2">Silver Member</span>
                <span class="badge bg-light text-dark">5 Stays</span>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats -->
<h4 class="section-title">Quick Stats</h4>
<div class="row mb-4">
    <div class="col-md-4">
        <div class="dashboard-card text-center">
            <i class="fas fa-calendar-check"></i>
            <h5>Active Reservations</h5>
            <h3 class="text-maroon">2</h3>
        </div>
    </div>
    <div class="col-md-4">
        <div class="dashboard-card text-center">
            <i class="fas fa-star"></i>
            <h5>Loyalty Points</h5>
            <h3 class="text-maroon">1,250</h3>
        </div>
    </div>
    <div class="col-md-4">
        <div class="dashboard-card text-center">
            <i class="fas fa-gift"></i>
            <h5>Special Offers</h5>
            <h3 class="text-maroon">3</h3>
        </div>
    </div>
</div>

<!-- Current Reservations -->
<h4 class="section-title">Current Reservations</h4>
<div class="row mb-4">
    <div class="col-md-6">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 class="mb-0">Deluxe Suite</h5>
                <span class="reservation-status status-confirmed">Confirmed</span>
            </div>
            <p class="text-muted mb-2">May 15 - May 20, 2023</p>
            <div class="d-flex justify-content-between">
                <div><i class="fas fa-user me-1"></i> 2 Adults</div>
                <a href="#" class="btn btn-outline-maroon">View Details</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 class="mb-0">Executive Room</h5>
                <span class="reservation-status status-pending">Pending</span>
            </div>
            <p class="text-muted mb-2">June 1 - June 5, 2023</p>
            <div class="d-flex justify-content-between">
                <div><i class="fas fa-user me-1"></i> 1 Adult</div>
                <a href="#" class="btn btn-outline-maroon">View Details</a>
            </div>
        </div>
    </div>
</div>

<!-- Available Services -->
<h4 class="section-title">Available Services</h4>
<div class="row">
    <div class="col-md-4">
        <div class="service-card text-center">
            <i class="fas fa-utensils"></i>
            <h5>Restaurant</h5>
            <p class="small text-muted">Book a table at our fine dining restaurant</p>
            <a href="#" class="btn btn-maroon">Book Now</a>
        </div>
    </div>
    <div class="col-md-4">
        <div class="service-card text-center">
            <i class="fas fa-spa"></i>
            <h5>Spa & Wellness</h5>
            <p class="small text-muted">Relax with our premium spa treatments</p>
            <a href="#" class="btn btn-maroon">Book Now</a>
        </div>
    </div>
    <div class="col-md-4">
        <div class="service-card text-center">
            <i class="fas fa-concierge-bell"></i>
            <h5>Room Service</h5>
            <p class="small text-muted">24/7 room service available</p>
            <a href="#" class="btn btn-maroon">Order Now</a>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .profile-section {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            color: white;
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
            position: relative;
            overflow: hidden;
        }

        .profile-section::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200px;
            height: 200px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
        }

        .user-avatar-large {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background-color: white;
            color: var(--primary-color);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            margin-bottom: 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

        .user-avatar-large:hover {
            transform: scale(1.1);
        }

        .dashboard-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 25px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            transition: all 0.3s;
            border: 1px solid rgba(0, 0, 0, 0.05);
        }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

        .dashboard-card i {
            font-size: 2.5rem;
            color: var(--primary-color);
            margin-bottom: 20px;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .reservation-status {
            padding: 8px 15px;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .status-confirmed {
            background-color: #d4edda;
            color: #155724;
        }

        .status-pending {
            background-color: #fff3cd;
            color: #856404;
        }

        .status-cancelled {
            background-color: #f8d7da;
            color: #721c24;
        }

        .service-card {
            border: 1px solid rgba(0, 0, 0, 0.05);
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 20px;
            transition: all 0.3s;
            background: white;
        }

        .service-card:hover {
            border-color: var(--primary-color);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            transform: translateY(-5px);
        }

        .service-card i {
            font-size: 2rem;
            color: var(--primary-color);
            margin-bottom: 15px;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .btn-maroon {
            background-color: var(--primary-color);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            transition: all 0.3s;
        }

        .btn-maroon:hover {
            background-color: var(--primary-dark);
            transform: translateY(-2px);
        }

        .btn-outline-maroon {
            border: 1px solid var(--primary-color);
            color: var(--primary-color);
            background: transparent;
            padding: 8px 15px;
            border-radius: 8px;
            transition: all 0.3s;
        }

        .btn-outline-maroon:hover {
            background-color: var(--primary-color);
            color: white;
            transform: translateY(-2px);
        }

        .badge {
            padding: 8px 15px;
            border-radius: 20px;
            font-weight: 500;
        }

        .section-title {
            color: var(--primary-color);
            font-weight: 600;
            margin-bottom: 25px;
            position: relative;
            padding-bottom: 10px;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 3px;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            border-radius: 3px;
        }
    </style>
}
