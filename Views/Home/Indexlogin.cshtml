@model WebApplication1.Models.BaseViewModel

@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "User Dashboard";
}

<!-- User Profile Section -->
<div class="profile-section">
    <div class="row align-items-center">
        <div class="col-md-3 text-center">
            <div class="user-avatar-large">
                <i class="fas fa-user"></i>
            </div>
        </div>
        <div class="col-md-9">
            <h3>Welcome back, @Model.Profile.FirstName @Model.Profile.LastName</h3>
            <p class="mb-0">Member since January 2023</p>
            <div class="mt-3">
                <span class="badge bg-light text-dark me-2">Silver Member</span>
                <span class="badge bg-light text-dark">5 Stays</span>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats -->
<h4 class="section-title">Quick Stats</h4>
<div class="row mb-4">
    <div class="col-md-4">
        <div class="dashboard-card text-center">
            <i class="fas fa-calendar-check"></i>
            <h5>Active Reservations</h5>
            <h3 class="text-maroon">2</h3>
        </div>
    </div>
    <div class="col-md-4">
        <div class="dashboard-card text-center">
            <i class="fas fa-star"></i>
            <h5>Loyalty Points</h5>
            <h3 class="text-maroon">1,250</h3>
        </div>
    </div>
    <div class="col-md-4">
        <div class="dashboard-card text-center">
            <i class="fas fa-gift"></i>
            <h5>Special Offers</h5>
            <h3 class="text-maroon">3</h3>
        </div>
    </div>
</div>

<!-- Current Reservations -->
<h4 class="section-title">Current Reservations</h4>
<div class="row mb-4">
    <div class="col-md-6">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 class="mb-0">Deluxe Suite</h5>
                <span class="reservation-status status-confirmed">Confirmed</span>
            </div>
            <p class="text-muted mb-2">May 15 - May 20, 2023</p>
            <div class="d-flex justify-content-between">
                <div><i class="fas fa-user me-1"></i> 2 Adults</div>
                <a href="#" class="btn btn-outline-maroon" data-bs-toggle="modal" data-bs-target="#viewDetailsModal">View Details</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 class="mb-0">Executive Room</h5>
                <span class="reservation-status status-pending">Pending</span>
            </div>
            <p class="text-muted mb-2">June 1 - June 5, 2023</p>
            <div class="d-flex justify-content-between">
                <div><i class="fas fa-user me-1"></i> 1 Adult</div>
                <a href="#" class="btn btn-outline-maroon" data-bs-toggle="modal" data-bs-target="#viewDetailsPendingModal">View Details</a>
            </div>
        </div>
    </div>
</div>

<!-- View Details Modal -->
<div class="modal fade" id="viewDetailsModal" tabindex="-1" aria-labelledby="viewDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewDetailsModalLabel">Reservation Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>Room:</strong> Deluxe Suite</p>
                <p><strong>Dates:</strong> May 15 - May 20, 2023</p>
                <p><strong>Guests:</strong> 2 Adults</p>
                <p><strong>Total:</strong> $1,250</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- View Details Modal for Pending Reservation -->
<div class="modal fade" id="viewDetailsPendingModal" tabindex="-1" aria-labelledby="viewDetailsPendingModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewDetailsPendingModalLabel">Reservation Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>Room:</strong> Executive Room</p>
                <p><strong>Dates:</strong> June 1 - June 5, 2023</p>
                <p><strong>Guests:</strong> 1 Adult</p>
                <p><strong>Total:</strong> $850</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Available Services -->
<h4 class="section-title">Available Services</h4>
<div class="row">
    <div class="col-md-4">
        <div class="service-card text-center">
            <i class="fas fa-utensils"></i>
            <h5>Restaurant</h5>
            <p class="small text-muted">Book a table at our fine dining restaurant</p>
            <button class="btn btn-maroon" data-bs-toggle="modal" data-bs-target="#restaurantModal">Book Now</button>
        </div>
    </div>
    <div class="col-md-4">
        <div class="service-card text-center">
            <i class="fas fa-spa"></i>
            <h5>Spa & Wellness</h5>
            <p class="small text-muted">Relax with our premium spa treatments</p>
            <button class="btn btn-maroon" data-bs-toggle="modal" data-bs-target="#spaModal">Book Now</button>
        </div>
    </div>
    <div class="col-md-4">
        <div class="service-card text-center">
            <i class="fas fa-concierge-bell"></i>
            <h5>Room Service</h5>
            <p class="small text-muted">24/7 room service available</p>
            <button class="btn btn-maroon" data-bs-toggle="modal" data-bs-target="#roomServiceModal">Order Now</button>
        </div>
    </div>
</div>

<!-- Modals -->
<div class="modal fade" id="restaurantModal" tabindex="-1" aria-labelledby="restaurantModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="restaurantModalLabel">Book a Table - Main Restaurant</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="restaurantBookingForm">
                    <div class="mb-3">
                        <label for="restaurantDate" class="form-label">Date</label>
                        <input type="date" class="form-control" id="restaurantDate" required>
                    </div>
                    <div class="mb-3">
                        <label for="restaurantTime" class="form-label">Time</label>
                        <input type="time" class="form-control" id="restaurantTime" required>
                    </div>
                    <div class="mb-3">
                        <label for="restaurantGuests" class="form-label">Number of Guests</label>
                        <input type="number" class="form-control" id="restaurantGuests" min="1" max="10" required>
                    </div>
                    <div class="mb-3">
                        <label for="restaurantSpecialRequests" class="form-label">Special Requests</label>
                        <textarea class="form-control" id="restaurantSpecialRequests" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-maroon" onclick="submitRestaurantBooking()">Submit Booking</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="spaModal" tabindex="-1" aria-labelledby="spaModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="spaModalLabel">Book Spa Treatment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="spaForm">
                    <div class="mb-3">
                        <label for="spaDate" class="form-label">Date</label>
                        <input type="date" class="form-control" id="spaDate" required>
                    </div>
                    <div class="mb-3">
                        <label for="spaTime" class="form-label">Time</label>
                        <input type="time" class="form-control" id="spaTime" required>
                    </div>
                    <div class="mb-3">
                        <label for="spaTreatment" class="form-label">Treatment Type</label>
                        <select class="form-select" id="spaTreatment" required>
                            <option value="massage">Swedish Massage</option>
                            <option value="facial">Facial Treatment</option>
                            <option value="body">Body Treatment</option>
                            <option value="package">Spa Package</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="spaDuration" class="form-label">Duration</label>
                        <select class="form-select" id="spaDuration" required>
                            <option value="30">30 minutes</option>
                            <option value="60">60 minutes</option>
                            <option value="90">90 minutes</option>
                            <option value="120">120 minutes</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="spaSpecialRequests" class="form-label">Special Requests</label>
                        <textarea class="form-control" id="spaSpecialRequests" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-maroon" onclick="submitSpaBooking()">Book Treatment</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="roomServiceModal" tabindex="-1" aria-labelledby="roomServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="roomServiceModalLabel">Room Service Menu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Breakfast</h6>
                        <ul class="list-unstyled">
                            <li>Continental Breakfast - $15</li>
                            <li>Full English Breakfast - $20</li>
                            <li>Pancakes with Maple Syrup - $12</li>
                            <li>Fresh Fruit Platter - $10</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6>Lunch & Dinner</h6>
                        <ul class="list-unstyled">
                            <li>Club Sandwich - $14</li>
                            <li>Caesar Salad - $12</li>
                            <li>Grilled Salmon - $25</li>
                            <li>Beef Tenderloin - $28</li>
                        </ul>
                    </div>
                </div>
                <div class="alert alert-info mt-3">
                    <i class="fas fa-phone"></i> To place an order, please call extension 1234
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .profile-section {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            color: white;
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
            position: relative;
            overflow: hidden;
        }

        .profile-section::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200px;
            height: 200px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
        }

        .user-avatar-large {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background-color: white;
            color: var(--primary-color);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            margin-bottom: 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

        .user-avatar-large:hover {
            transform: scale(1.1);
        }

        .dashboard-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 25px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            transition: all 0.3s;
            border: 1px solid rgba(0, 0, 0, 0.05);
        }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

        .dashboard-card i {
            font-size: 2.5rem;
            color: var(--primary-color);
            margin-bottom: 20px;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .reservation-status {
            padding: 8px 15px;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .status-confirmed {
            background-color: #d4edda;
            color: #155724;
        }

        .status-pending {
            background-color: #fff3cd;
            color: #856404;
        }

        .status-cancelled {
            background-color: #f8d7da;
            color: #721c24;
        }

        .service-card {
            border: 1px solid rgba(0, 0, 0, 0.05);
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 20px;
            transition: all 0.3s;
            background: white;
        }

        .service-card:hover {
            border-color: var(--primary-color);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            transform: translateY(-5px);
        }

        .service-card i {
            font-size: 2rem;
            color: var(--primary-color);
            margin-bottom: 15px;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .btn-maroon {
            background-color: var(--primary-color);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            transition: all 0.3s;
        }

        .btn-maroon:hover {
            background-color: var(--primary-dark);
            transform: translateY(-2px);
        }

        .btn-outline-maroon {
            border: 1px solid var(--primary-color);
            color: var(--primary-color);
            background: transparent;
            padding: 8px 15px;
            border-radius: 8px;
            transition: all 0.3s;
        }

        .btn-outline-maroon:hover {
            background-color: var(--primary-color);
            color: white;
            transform: translateY(-2px);
        }

        .badge {
            padding: 8px 15px;
            border-radius: 20px;
            font-weight: 500;
        }

        .section-title {
            color: var(--primary-color);
            font-weight: 600;
            margin-bottom: 25px;
            position: relative;
            padding-bottom: 10px;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 3px;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            border-radius: 3px;
        }
    </style>
}
