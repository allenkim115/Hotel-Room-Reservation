@model WebApplication1.Models.BaseViewModel
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "My Reservations";
}

<h1 class="page-title">My Reservations</h1>

<div class="reservations-container">
    <!-- Active Reservations -->
    <div class="section-container">
        <h2 class="section-title">Active Reservations</h2>
        <div class="row">
            @foreach (var reservation in Model.ActiveReservations)
            {
                <div class="col-md-6">
                    <div class="dashboard-card">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="mb-0">
                                @reservation.RoomType
                            </h5>
                            <span class="reservation-status status-@reservation.Status.ToLower()">@reservation.Status</span>
                        </div>
                        <p class="text-muted mb-2">@reservation.CheckInDate.ToString("MMM dd") - @reservation.CheckOutDate.ToString("MMM dd, yyyy")</p>
                        <div class="d-flex justify-content-between">
                            <div><i class="fas fa-user me-1"></i> @reservation.NumberOfGuests @(reservation.NumberOfGuests == 1 ? "Adult" : "Adults")</div>
                            <div class="d-flex gap-2">
                                <a href="#" class="btn btn-outline-maroon" data-bs-toggle="modal" data-bs-target="#viewDetailsModal-@reservation.Id">View Details</a>
                                @if (reservation.Status == "Pending" || reservation.Status == "Service")
                                {
                                    <a href="#" class="btn btn-maroon" data-bs-toggle="modal" data-bs-target="#modifyReservationModal-@reservation.Id">Modify</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- View Details Modal -->
                <div class="modal fade" id="viewDetailsModal-@reservation.Id" tabindex="-1" aria-labelledby="viewDetailsModalLabel-@reservation.Id" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="viewDetailsModalLabel-@reservation.Id">Reservation Details</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p><strong>Room:</strong> @reservation.RoomType</p>
                                <p><strong>Dates:</strong> @reservation.CheckInDate.ToString("MMM dd") - @reservation.CheckOutDate.ToString("MMM dd, yyyy")</p>
                                <p><strong>Guests:</strong> @reservation.NumberOfGuests @(reservation.NumberOfGuests == 1 ? "Adult" : "Adults")</p>
                                <p><strong>Total:</strong> $@reservation.TotalAmount.ToString("N2")</p>
                                <p><strong>Status:</strong> <span class="badge bg-@(reservation.Status == "Approved" ? "success" : reservation.Status == "Pending" ? "warning" : reservation.Status == "Rejected" ? "danger" : "info")">@reservation.Status</span></p>
                                @if (!string.IsNullOrEmpty(reservation.SpecialRequests))
                                {
                                    <p><strong>Special Requests:</strong> @reservation.SpecialRequests</p>
                                }
                            </div>
                            <div class="modal-footer">
                                @if (reservation.Status == "Pending" || reservation.Status == "Service")
                                {
                                    <button type="button" class="btn btn-danger" onclick="cancelReservation(@reservation.Id)">Cancel Reservation</button>
                                }
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modify Reservation Modal -->
                @if (reservation.Status == "Pending" || reservation.Status == "Service")
                {
                    <div class="modal fade" id="modifyReservationModal-@reservation.Id" tabindex="-1" aria-labelledby="modifyReservationModalLabel-@reservation.Id" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="modifyReservationModalLabel-@reservation.Id">Modify Reservation</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form id="modifyForm-@reservation.Id">
                                        <div class="mb-3">
                                            <label for="checkInDate-@reservation.Id" class="form-label">Check-in Date</label>
                                            <input type="date" class="form-control" id="checkInDate-@reservation.Id" value="@reservation.CheckInDate.ToString("yyyy-MM-dd")" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="checkOutDate-@reservation.Id" class="form-label">Check-out Date</label>
                                            <input type="date" class="form-control" id="checkOutDate-@reservation.Id" value="@reservation.CheckOutDate.ToString("yyyy-MM-dd")" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="guests-@reservation.Id" class="form-label">Number of Guests</label>
                                            <input type="number" class="form-control" id="guests-@reservation.Id" value="@reservation.NumberOfGuests" min="1" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="specialRequests-@reservation.Id" class="form-label">Special Requests</label>
                                            <textarea class="form-control" id="specialRequests-@reservation.Id" rows="3">@reservation.SpecialRequests</textarea>
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="button" class="btn btn-maroon" onclick="modifyReservation(@reservation.Id)">Save Changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <!-- Past Reservations -->
    <div class="section-container">
        <h2 class="section-title">Past Reservations</h2>
        <div class="row">
            @foreach (var reservation in Model.PastReservations)
            {
                <div class="col-md-6">
                    <div class="dashboard-card">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="mb-0">
                                @reservation.RoomType
                            </h5>
                            <span class="reservation-status status-completed">Completed</span>
                        </div>
                        <p class="text-muted mb-2">@reservation.CheckInDate.ToString("MMM dd") - @reservation.CheckOutDate.ToString("MMM dd, yyyy")</p>
                        <div class="d-flex justify-content-between">
                            <div><i class="fas fa-user me-1"></i> @reservation.NumberOfGuests @(reservation.NumberOfGuests == 1 ? "Adult" : "Adults")</div>
                            <div class="d-flex gap-2">
                                <a href="#" class="btn btn-outline-maroon" data-bs-toggle="modal" data-bs-target="#viewDetailsPastModal-@reservation.Id">View Details</a>
                                <a href="#" class="btn btn-maroon" data-bs-toggle="modal" data-bs-target="#bookAgainModal-@reservation.Id">Book Again</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- View Details Modal for Past Reservation -->
                <div class="modal fade" id="viewDetailsPastModal-@reservation.Id" tabindex="-1" aria-labelledby="viewDetailsPastModalLabel-@reservation.Id" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="viewDetailsPastModalLabel-@reservation.Id">Reservation Details</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p><strong>Room:</strong> @reservation.RoomType</p>
                                <p><strong>Dates:</strong> @reservation.CheckInDate.ToString("MMM dd") - @reservation.CheckOutDate.ToString("MMM dd, yyyy")</p>
                                <p><strong>Guests:</strong> @reservation.NumberOfGuests @(reservation.NumberOfGuests == 1 ? "Adult" : "Adults")</p>
                                <p><strong>Total:</strong> $@reservation.TotalAmount.ToString("N2")</p>
                                @if (!string.IsNullOrEmpty(reservation.SpecialRequests))
                                {
                                    <p><strong>Special Requests:</strong> @reservation.SpecialRequests</p>
                                }
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Book Again Modal -->
                <div class="modal fade" id="bookAgainModal-@reservation.Id" tabindex="-1" aria-labelledby="bookAgainModalLabel-@reservation.Id" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="bookAgainModalLabel-@reservation.Id">Book Again</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>Would you like to book the <strong>@reservation.RoomType</strong> again?</p>
                                <form id="bookAgainForm-@reservation.Id">
                                    <div class="mb-3">
                                        <label for="checkinDate-@reservation.Id" class="form-label">Check-in Date</label>
                                        <input type="date" class="form-control" id="checkinDate-@reservation.Id" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="checkoutDate-@reservation.Id" class="form-label">Check-out Date</label>
                                        <input type="date" class="form-control" id="checkoutDate-@reservation.Id" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="guests-@reservation.Id" class="form-label">Number of Guests</label>
                                        <input type="number" class="form-control" id="guests-@reservation.Id" value="@reservation.NumberOfGuests" min="1" required>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-maroon" onclick="bookAgain(@reservation.Id)">Confirm Booking</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function cancelReservation(reservationId) {
            if (confirm('Are you sure you want to cancel this reservation?')) {
                $.post('/Reservations/Cancel', { id: reservationId })
                    .done(function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Failed to cancel reservation: ' + response.message);
                        }
                    })
                    .fail(function() {
                        alert('An error occurred while canceling the reservation.');
                    });
            }
        }

        function modifyReservation(reservationId) {
            const form = $(`#modifyForm-${reservationId}`);
            if (!form[0].checkValidity()) {
                form[0].reportValidity();
                return;
            }

            const data = {
                id: reservationId,
                checkInDate: $(`#checkInDate-${reservationId}`).val(),
                checkOutDate: $(`#checkOutDate-${reservationId}`).val(),
                numberOfGuests: $(`#guests-${reservationId}`).val(),
                specialRequests: $(`#specialRequests-${reservationId}`).val()
            };

            $.post('/Reservations/Modify', data)
                .done(function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert('Failed to modify reservation: ' + response.message);
                    }
                })
                .fail(function() {
                    alert('An error occurred while modifying the reservation.');
                });
        }

        function bookAgain(reservationId) {
            const form = $(`#bookAgainForm-${reservationId}`);
            if (!form[0].checkValidity()) {
                form[0].reportValidity();
                return;
            }

            const data = {
                roomType: $(`#bookAgainModal-${reservationId} strong`).text(),
                checkInDate: $(`#checkinDate-${reservationId}`).val(),
                checkOutDate: $(`#checkoutDate-${reservationId}`).val(),
                numberOfGuests: $(`#guests-${reservationId}`).val()
            };

            $.post('/Reservations/Book', data)
                .done(function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert('Failed to book reservation: ' + response.message);
                    }
                })
                .fail(function() {
                    alert('An error occurred while booking the reservation.');
                });
        }

        // Initialize date inputs with minimum date as today
        $(document).ready(function() {
            const today = new Date().toISOString().split('T')[0];
            $('input[type="date"]').attr('min', today);
        });
    </script>
}

@section Styles {
    <style>
        .page-title {
            color: var(--primary-color);
            font-weight: bold;
            margin-bottom: 30px;
            font-size: 2rem;
            text-align: center;
        }

        .section-container {
            margin-bottom: 40px;
        }

        .section-title {
            color: var(--primary-color);
            font-weight: 600;
            margin-bottom: 25px;
            font-size: 1.5rem;
            position: relative;
            padding-bottom: 10px;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 3px;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            border-radius: 3px;
        }

        .reservation-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 25px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            transition: all 0.3s;
            border: 1px solid rgba(0, 0, 0, 0.05);
        }

        .reservation-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

        .dashboard-card {
            background: white;
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 25px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            transition: all 0.3s;
            border: 1px solid rgba(0, 0, 0, 0.05);
        }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

        .reservation-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .reservation-header h3 {
            color: var(--primary-color);
            margin: 0;
            font-size: 1.3rem;
        }

        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .status-confirmed, .status-approved {
            background-color: #d4edda;
            color: #155724;
        }

        .status-pending {
            background-color: #fff3cd;
            color: #856404;
        }

        .status-completed {
            background-color: #e2e3e5;
            color: #383d41;
        }

        .status-rejected {
            background-color: #f8d7da;
            color: #721c24;
        }

        .status-cancelled {
            background-color: #f8d7da;
            color: #721c24;
        }

        .reservation-status {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .reservation-details {
            margin-bottom: 20px;
        }

        .detail-item {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
            color: var(--text-light);
        }

        .detail-item i {
            color: var(--primary-color);
            margin-right: 10px;
            width: 20px;
            text-align: center;
        }

        .reservation-actions {
            display: flex;
            gap: 10px;
        }

        .btn-maroon {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            color: white;
            border: none;
            padding: 8px 20px;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s;
        }

        .btn-maroon:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(139, 28, 28, 0.3);
            color: white;
        }

        .btn-outline-maroon {
            border: 1px solid var(--primary-color);
            color: var(--primary-color);
            background: transparent;
            padding: 8px 20px;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s;
        }

        .btn-outline-maroon:hover {
            background-color: var(--primary-color);
            color: white;
            transform: translateY(-2px);
        }
    </style>
}