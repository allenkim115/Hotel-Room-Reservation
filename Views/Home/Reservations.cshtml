<!-- View Details Modal -->
<div class="modal fade" id="viewDetailsModal" tabindex="-1" aria-labelledby="viewDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewDetailsModalLabel">Reservation Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>Room:</strong> Deluxe Suite</p>
                <p><strong>Dates:</strong> May 15 - May 20, 2023</p>
                <p><strong>Guests:</strong> 2 Adults</p>
                <p><strong>Total:</strong> $1,250</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Modify Reservation Modal -->
<div class="modal fade" id="modifyReservationModal" tabindex="-1" aria-labelledby="modifyReservationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modifyReservationModalLabel">Modify Reservation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="modifyDates" class="form-label">Dates</label>
                        <input type="text" class="form-control" id="modifyDates" placeholder="May 15 - May 20, 2023">
                    </div>
                    <div class="mb-3">
                        <label for="modifyGuests" class="form-label">Guests</label>
                        <input type="number" class="form-control" id="modifyGuests" placeholder="2">
                    </div>
                    <div class="mb-3">
                        <label for="modifyTotal" class="form-label">Total</label>
                        <input type="text" class="form-control" id="modifyTotal" placeholder="$1,250">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-maroon">Save Changes</button>
            </div>
        </div>
    </div>
</div>

