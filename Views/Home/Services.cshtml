@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Hotel Services";
}

<h1 class="page-title">Hotel Services</h1>

<div class="services-container">
    <!-- Restaurant Services -->
    <div class="section-container">
        <h2 class="section-title">Dining & Restaurant</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-utensils"></i>
                    </div>
                    <h3>Main Restaurant</h3>
                    <p>Enjoy our fine dining experience with a variety of international cuisines.</p>
                    <ul class="service-features">
                        <li><i class="fas fa-clock"></i> 6:00 AM - 11:00 PM</li>
                        <li><i class="fas fa-map-marker-alt"></i> Ground Floor</li>
                        <li><i class="fas fa-dollar-sign"></i> $$$</li>
                    </ul>
                    <a href="#" class="btn btn-maroon">Book a Table</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-coffee"></i>
                    </div>
                    <h3>Coffee Shop</h3>
                    <p>Relax with our premium coffee and light snacks in a cozy atmosphere.</p>
                    <ul class="service-features">
                        <li><i class="fas fa-clock"></i> 7:00 AM - 10:00 PM</li>
                        <li><i class="fas fa-map-marker-alt"></i> Lobby</li>
                        <li><i class="fas fa-dollar-sign"></i> $$</li>
                    </ul>
                    <a href="#" class="btn btn-maroon">Order Now</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-cocktail"></i>
                    </div>
                    <h3>Bar & Lounge</h3>
                    <p>Unwind with our signature cocktails and live music in the evening.</p>
                    <ul class="service-features">
                        <li><i class="fas fa-clock"></i> 4:00 PM - 2:00 AM</li>
                        <li><i class="fas fa-map-marker-alt"></i> 2nd Floor</li>
                        <li><i class="fas fa-dollar-sign"></i> $$$</li>
                    </ul>
                    <a href="#" class="btn btn-maroon">Reserve</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Wellness Services -->
    <div class="section-container">
        <h2 class="section-title">Wellness & Spa</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-spa"></i>
                    </div>
                    <h3>Spa Services</h3>
                    <p>Indulge in our premium spa treatments and massages.</p>
                    <ul class="service-features">
                        <li><i class="fas fa-clock"></i> 9:00 AM - 9:00 PM</li>
                        <li><i class="fas fa-map-marker-alt"></i> Spa Center</li>
                        <li><i class="fas fa-dollar-sign"></i> $$$$</li>
                    </ul>
                    <a href="#" class="btn btn-maroon">Book Treatment</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-swimming-pool"></i>
                    </div>
                    <h3>Swimming Pool</h3>
                    <p>Enjoy our heated indoor pool and jacuzzi facilities.</p>
                    <ul class="service-features">
                        <li><i class="fas fa-clock"></i> 6:00 AM - 10:00 PM</li>
                        <li><i class="fas fa-map-marker-alt"></i> 3rd Floor</li>
                        <li><i class="fas fa-dollar-sign"></i> Free for Guests</li>
                    </ul>
                    <a href="#" class="btn btn-maroon">View Schedule</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-dumbbell"></i>
                    </div>
                    <h3>Fitness Center</h3>
                    <p>Stay fit with our state-of-the-art gym equipment.</p>
                    <ul class="service-features">
                        <li><i class="fas fa-clock"></i> 24/7</li>
                        <li><i class="fas fa-map-marker-alt"></i> 3rd Floor</li>
                        <li><i class="fas fa-dollar-sign"></i> Free for Guests</li>
                    </ul>
                    <a href="#" class="btn btn-maroon">View Facilities</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Services -->
    <div class="section-container">
        <h2 class="section-title">Additional Services</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-concierge-bell"></i>
                    </div>
                    <h3>Room Service</h3>
                    <p>24/7 room service available for your convenience.</p>
                    <ul class="service-features">
                        <li><i class="fas fa-clock"></i> 24/7</li>
                        <li><i class="fas fa-phone"></i> Ext. 1234</li>
                        <li><i class="fas fa-dollar-sign"></i> Menu Prices</li>
                    </ul>
                    <a href="#" class="btn btn-maroon">View Menu</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-car"></i>
                    </div>
                    <h3>Valet Parking</h3>
                    <p>Professional valet parking service available.</p>
                    <ul class="service-features">
                        <li><i class="fas fa-clock"></i> 24/7</li>
                        <li><i class="fas fa-map-marker-alt"></i> Main Entrance</li>
                        <li><i class="fas fa-dollar-sign"></i> $20/day</li>
                    </ul>
                    <a href="#" class="btn btn-maroon">Book Parking</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-business-time"></i>
                    </div>
                    <h3>Business Center</h3>
                    <p>Fully equipped business center for your work needs.</p>
                    <ul class="service-features">
                        <li><i class="fas fa-clock"></i> 7:00 AM - 9:00 PM</li>
                        <li><i class="fas fa-map-marker-alt"></i> 1st Floor</li>
                        <li><i class="fas fa-dollar-sign"></i> Free for Guests</li>
                    </ul>
                    <a href="#" class="btn btn-maroon">View Facilities</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .page-title {
            color: var(--primary-color);
            font-weight: bold;
            margin-bottom: 30px;
            font-size: 2rem;
            text-align: center;
        }

        .section-container {
            margin-bottom: 40px;
        }

        .section-title {
            color: var(--primary-color);
            font-weight: 600;
            margin-bottom: 25px;
            font-size: 1.5rem;
            position: relative;
            padding-bottom: 10px;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 3px;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            border-radius: 3px;
        }

        .service-card {
            background: white;
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            transition: all 0.3s;
            text-align: center;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

        .service-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            color: white;
            font-size: 2rem;
        }

        .service-card h3 {
            color: var(--primary-color);
            margin-bottom: 15px;
            font-size: 1.3rem;
        }

        .service-card p {
            color: var(--text-light);
            margin-bottom: 20px;
        }

        .service-features {
            list-style: none;
            padding: 0;
            margin-bottom: 20px;
        }

        .service-features li {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 8px;
            color: var(--text-light);
        }

        .service-features i {
            color: var(--primary-color);
            margin-right: 8px;
            width: 20px;
            text-align: center;
        }

        .btn-maroon {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            color: white;
            border: none;
            padding: 10px 25px;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s;
            margin-top: auto;
        }

        .btn-maroon:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(139, 28, 28, 0.3);
            color: white;
        }
    </style>
} 