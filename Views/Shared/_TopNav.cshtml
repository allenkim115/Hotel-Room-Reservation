@model WebApplication1.Models.BaseViewModel

<!-- Top Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid px-4">
        <a class="navbar-brand" href="#">
            <img src="~/images/logo1.png" alt="Logo" width="40"> Nustar Hotel
        </a>
        
        <div class="d-flex align-items-center ms-auto">
            <div class="dropdown">
                <button class="btn d-flex align-items-center" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <div class="user-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="d-none d-md-block ms-2">
                        <div class="fw-bold text-white">@Model.Profile.FirstName @Model.Profile.LastName</div>
                        <div class="small text-white-50">@Model.Profile.Role</div>
                    </div>
                    <i class="fas fa-chevron-down ms-2 text-white"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li><a class="dropdown-item" href="@Url.Action("Profile", "Home")"><i class="fas fa-user-circle me-2"></i>My Profile</a></li>
                    <li><a class="dropdown-item" href="@Url.Action("Logout", "Home")"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                </ul>
            </div>
        </div>
    </div>
</nav> 