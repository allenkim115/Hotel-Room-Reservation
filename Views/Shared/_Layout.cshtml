<!DOCTYPE html>
<html lang="en">
<head>
    <title>Nustar Resort & Casino</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<style>
    body{
        font-family: "Quicksand", sans-serif;
    }
</style>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background-color: maroon; width: 100%;">
            <div class="container">
                <a class="navbar-brand fw-bold" href="/">
                    <img src="~/images/logo1.png" alt="Logo" width="50"> Nustar Hotel
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                            <li class="nav-item"><a class="btn btn-outline-light mx-2" href="/Account/Login">Sign In</a></li>
                            <li class="nav-item"><a class="btn btn-light text-maroon" href="/Account/Register">Sign Up</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="text-center py-3">
        <p>&copy; 2025 Nustar Hotel. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
